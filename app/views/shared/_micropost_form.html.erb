<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t(".compose_micropost") %>
  </div>
  <%= f.submit t(".post_submit"), class: "btn btn-primary" %>
  <span class="image">
    <%= f.file_field :image, accept: Settings.image_restricted_types.join(",")%>
  </span>
<% end %>
<%= content_tag :div,
  id: "data_passing",
  max: Settings.image.size do %>
<% end %>
