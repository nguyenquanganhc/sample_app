<% provide :title, t(".fore_title") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "follow_form" if logged_in? %>
    <% if @microposts.any? %>
      <%= paginate @microposts, theme: "twitter-bootstrap-3" %>
      <h3> <%= t ".microposts" %> (<%= @microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= paginate @microposts, theme: "twitter-bootstrap-3" %>
    <% end %>
  </div>
</div>
